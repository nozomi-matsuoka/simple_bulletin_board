<div class="row mt-5">
	<div class="col-9">
		<h1 class="text-info">Bulletin Board</h1>
	</div>

	<div class="col-3">
		<%= link_to "+ Create New", new_post_path, class: "btn btn-primary px-5"%>
	</div>

</div>

<table class="table table-bordered" style="table-layout:fixed;width:100%;">
　　<thead>
    <tr class="bg-info">
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Created at</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
<tbody>

<% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= link_to post.id, post_url(post)%></th>
      <td><%= link_to post.title, post_url(post)%></td>
      <td><%= post.content%></td>
      <td><%= post.created_at%></td>

      <td>

  <div class="btn-group">
			<%= link_to "Edit", edit_post_path(post), class: "btn btn-warning px-3 mr-2" %>
			<%= link_to "Delete", post_path(post.id), method: :delete, class: "btn btn-danger px-2"%>
		</div>
	</div>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>